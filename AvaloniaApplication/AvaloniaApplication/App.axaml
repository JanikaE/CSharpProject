<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:AvaloniaApplication"
             x:Class="AvaloniaApplication.App"
             RequestedThemeVariant="Default">
	<!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->
	<Application.DataContext>
		<local:MainWindowViewModel />
	</Application.DataContext>

	<Application.Styles>
		<FluentTheme />
	</Application.Styles>
	<TrayIcon.Icons>
		<TrayIcons>
			<TrayIcon x:DataType="local:MainWindowViewModel" Icon="Assets/avalonia-logo.ico" ToolTipText="AvaloniaApplication">
				<TrayIcon.Menu>
					<NativeMenu>
						<NativeMenuItem Header="切换全屏显示" Command="{Binding SwitchFullScreenCommand}" Gesture="F11"/>
						<NativeMenuItem Header="刷新" Command="{Binding RefreshCommand}" Gesture="F5"/>
						<NativeMenuItem Header="开发者工具" Command="{Binding OpenDevToolsCommand}" Gesture="F12"/>
						<NativeMenuItem Header="退出" Command="{Binding ExitApplicationCommand}" />
					</NativeMenu>
				</TrayIcon.Menu>
			</TrayIcon>
		</TrayIcons>
	</TrayIcon.Icons>
</Application>