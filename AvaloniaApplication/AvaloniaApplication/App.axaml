<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:AvaloniaApplication"
             x:Class="AvaloniaApplication.App"
             RequestedThemeVariant="Default">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->
    <Application.Styles>
        <FluentTheme />
    </Application.Styles>
	<TrayIcon.Icons>
		<TrayIcons>
			<TrayIcon Icon="Assets/avalonia-logo.ico" ToolTipText="AvaloniaApplication">
				<TrayIcon.Menu>
					<NativeMenu>
						<NativeMenuItem Header="{Binding SwitchFullScreenHeader}" Command="{Binding SwitchFullScreenCommand}" />
						<NativeMenuItem Header="刷新" Command="{Binding RefreshCommand}" />
						<NativeMenuItem Header="开发者工具" Command="{Binding OpenDevToolsCommand}" />
						<NativeMenuItem Header="退出" Command="{Binding ExitApplicationCommand}" />
					</NativeMenu>
				</TrayIcon.Menu>
			</TrayIcon>
		</TrayIcons>
	</TrayIcon.Icons>
</Application>