<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="AvaloniaApplication.MainWindow"
        MinWidth="500"
        MinHeight="300"
        Title="AvaloniaApplication">

	<DockPanel>
		<Menu Name="mainMenu" DockPanel.Dock="Top">
			<MenuItem Header="_File">
				<MenuItem Header="_New Tab" Click="OnNewTabMenuItemClick" />
				<MenuItem Header="_Switch Full Screen" Click="OnSwitchFullScreenMenuItemClick"/>
				<MenuItem Header="_Refresh" Click="OnRefreshMenuItemClick"/>
				<MenuItem Header="_Open Dev Tools..." Click="OnOpenDevToolsMenuItemClick"/>
			</MenuItem>
		</Menu>

		<TabControl Name="tabControl">
		</TabControl>
	</DockPanel>
</Window>